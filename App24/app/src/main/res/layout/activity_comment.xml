<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">
    <include
        android:id="@+id/menu_layout"
        layout="@layout/base_main_toolbar"/>
    <RelativeLayout
        android:id="@+id/layout_write_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_layout"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/edit_comment_section" android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"/>
            <EditText
                android:id="@+id/edit_write_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/profile_pic"
                android:background="@drawable/rect_corners_edit_text"
                android:hint="write a comment..."
                android:isScrollContainer="true"
                android:maxLines="2"
                android:padding="5dp"
                />
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_comment_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_write_comment">
        <TextView
            android:id="@+id/txt_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/post_comment"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimary"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Post Comment"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <View
        android:id="@+id/seperator" android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layout_comment_count"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/img_comment_creator_pic"
        android:background="@color/text_color_deselect"/>
    <ListView
        android:id="@+id/list_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/seperator">
    </ListView>
</RelativeLayout>